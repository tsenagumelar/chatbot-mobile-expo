{
  "flow_name": "POLANTAS_MENYAPA_ONBOARDING",
  "version": "1.0.0",
  "initial_step": "WELCOME",
  "steps": {
    "WELCOME": {
      "type": "message",
      "assistant": {
        "text": "Halo Sobat Lantas üëã.\n\nAku Polman, sahabat perjalananmu.\nAku di sini buat bantu kamu tetap aman dan nyaman di jalan.\n\nBoleh kenalan sebentar supaya aku bisa bantu lebih pas?"
      },
      "user_input": {
        "type": "action",
        "options": [
          {
            "label": "Mulai",
            "value": "START"
          }
        ]
      },
      "next": {
        "START": "ASK_NAME",
        "SKIP": "DONE"
      }
    },

    "ASK_NAME": {
      "type": "input",
      "assistant": {
        "text": "Aku panggil kamu siapa?\nBiar ngobrolnya lebih enak üòä"
      },
      "user_input": {
        "type": "text",
        "placeholder": "Silahkan isi nama kamu",
        "validation": {
          "min_length": 2
        }
      },
      "save_to_profile": {
        "field": "name"
      },
      "next": "ASK_VEHICLE"
    },
    "ASK_VEHICLE": {
      "type": "choice",
      "assistant": {
        "text": "Oke, {name} üëç.\n\nKamu berkendara pakai apa?"
      },
      "user_input": {
        "type": "single_choice",
        "options": [
          { "label": "üõµ Motor", "value": "motor" },
          { "label": "üöó Mobil", "value": "mobil" },
          { "label": "üö≤ Sepeda", "value": "sepeda" },
          { "label": "üöå Angkutan umum", "value": "public" },
          { "label": "üö∂ Jalan kaki", "value": "walk" }
        ]
      },
      "save_to_profile": {
        "field": "primary_vehicle"
      },
      "next": "ASK_CITY"
    },

    "ASK_CITY": {
      "type": "choice",
      "assistant": {
        "text": "Kamu ingin berkendara ke daerah mana?"
      },
      "user_input": {
        "type": "single_choice",
        "options": [
          {
            "label": "Masukan alamat",
            "value": "INPUT_ADDRESS"
          },
          {
            "label": "Free ride",
            "value": "FREE_RIDE"
          }
        ]
      },
      "next": {
        "INPUT_ADDRESS": "SEARCH_DESTINATION",
        "FREE_RIDE": "DONE"
      }
    },

    "SEARCH_DESTINATION": {
      "type": "input",
      "assistant": {
        "text": "Tulis tujuan kamu, nanti aku bantu cari lokasinya."
      },
      "user_input": {
        "type": "places_search",
        "placeholder": "Cari lokasi tujuan..."
      },
      "save_to_profile": {
        "field": "city"
      },
      "next": "DONE"
    },

    "DONE": {
      "type": "final",
      "assistant": {
        "text": "Selamat datang, {name} üëã.\n\nMulai sekarang aku siap nemenin perjalananmu.\n\nKalau kamu butuh bantuan, langsung chat aku ya."
      },
      "user_input": {
        "type": "action",
        "options": [
          {
            "label": "Mulai Perjalanan",
            "value": "ENTER_APP"
          }
        ]
      },
      "next": "ENTER_APP"
    }
  }
}
